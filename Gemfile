source :rubygems

gem 'rails', '3.2.11'

gem 'jquery-rails', '~> 2.1'
gem 'tinami', '~> 0.4'

group :assets do
  gem 'sass-rails', '~> 3.2'
  gem 'therubyracer', '~> 0.11'
  gem 'coffee-rails', '~> 3.2'
  gem 'uglifier', '~> 1.3'
end

group :development do
  gem 'growl'
  gem 'guard-livereload'
  gem 'guard-rspec'
  gem 'pry-rails'
end

group :development, :test do
  gem 'rspec-rails'
end
